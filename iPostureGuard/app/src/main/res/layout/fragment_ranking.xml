<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Rankings 1-20 with images -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Example of a single ranking item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/top1_image"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:src="@drawable/top1"
                        android:padding="8dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:padding="8dp"
                        android:layout_weight="0.8" />

                    <TextView
                        android:id="@+id/user1_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/user_1"
                        android:padding="8dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/user1_mark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mark_1"
                        android:padding="8dp"
                        android:layout_weight="1" />
                </LinearLayout>


                <!-- Example for ranking 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/top2_image"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:src="@drawable/top2"
                        android:padding="8dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:padding="8dp"
                        android:layout_weight="0.8" />

                    <TextView
                        android:id="@+id/user2_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/user_2"
                        android:padding="8dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/user2_mark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mark_2"
                        android:padding="8dp"
                        android:layout_weight="1" />
                </LinearLayout>


                <!-- Continue for rankings 3-20 -->
