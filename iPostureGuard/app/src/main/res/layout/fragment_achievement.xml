<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="24dp"
            android:paddingLeft="24dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/award"
                android:textSize="35sp"
                android:fontFamily="@font/font"
                android:layout_margin="20dp" />

            <Spinner
                android:id="@+id/spinner_achievement_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="12dp"
                android:background="@drawable/button_white"
                android:spinnerMode="dropdown" />


            <LinearLayout
                android:id="@+id/achievement_1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_1"
                    android:background="@drawable/button_red"
                    android:contentDescription="@string/award_1"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_1"
                    android:gravity="center"
                    android:layout_margin="10dp"

                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_2"
                    android:contentDescription="@string/award_2"
                    android:background="@drawable/button_red"

                    android:padding="16dp"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_2"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_3"
                    android:contentDescription="@string/award_3"
                    android:padding="16dp"
                    android:background="@drawable/button_red"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_3"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_4"
                    android:contentDescription="@string/award_4"
                    android:padding="16dp"
                    android:background="@drawable/button_red"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_4"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_5_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_5"
                    android:contentDescription="@string/award_5"
                    android:padding="16dp"
                    android:background="@drawable/button_red"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_5"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_6_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_6"
                    android:contentDescription="@string/award_6"
                    android:padding="16dp"
                    android:background="@drawable/button_red"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/award_6"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="35sp"
                    android:fontFamily="@font/font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_7_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_yellow">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/award_image_7"
                    android:contentDescription="@string/award_7"
                    android:padding="16dp"
                    android:background="@drawable/button_red"
                    android:layout_margin="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
