<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_back"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textSize="30sp"
                android:fontFamily="@font/font"
                android:layout_gravity="center" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo_description"
            android:padding="16dp" />


        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_lname"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font3"
            android:background="@drawable/button_white"
            android:layout_margin="12dp" />


        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_fname"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font3"
            android:background="@drawable/button_white"
            android:layout_margin="12dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_male"
                android:fontFamily="@font/font"
                android:background="@drawable/male"
                android:layout_margin="10dp"
                android:padding="16dp"
                android:textSize="30sp" />
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_female"
                android:fontFamily="@font/font"
                android:background="@drawable/button_red"
                android:layout_margin="10dp"
                android:padding="16dp"
                android:textSize="30sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_dob"
            android:layout_margin="10dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/font"
            android:textSize="35sp" />

        <DatePicker
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:scaleX="1.5"
            android:scaleY="1.5" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_phone"
            android:inputType="phone|number"
            android:padding="12dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font3"
            android:background="@drawable/button_white"
            android:layout_margin="12dp" />


        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font3"
            android:background="@drawable/button_white"
            android:layout_margin="12dp" />

        <EditText
            android:id="@+id/pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_confirmpassword"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font3"
            android:background="@drawable/button_white"
            android:layout_margin="12dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_register"
            android:paddingLeft="62dp"
            android:paddingRight="62dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/font"
            android:textSize="28sp"
            android:background="@drawable/button_blue"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
